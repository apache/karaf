import org.custommonkey.xmlunit.*;
import java.io.*;
import java.lang.*;

assertControl( String source, String target ) {

	Reader r = new FileReader(new File(basedir, source));

	// load the features file pushed to the repository
	File generated = new File( localRepositoryPath, target );
	if (generated.exists()) {
    	try {
        	XMLAssert.assertXMLEqual(r, new FileReader(generated));
        	return true;
    	} catch (Throwable ignored) { }
	}
	return false;
}

return true
	&& assertControl ("feature-a.xml","test/bundle-module-a/1.0-SNAPSHOT/bundle-module-a-1.0-SNAPSHOT-features.xml")
	&& assertControl ("feature-b.xml","test/bundle-module-b/1.0-SNAPSHOT/bundle-module-b-1.0-SNAPSHOT-features.xml")
	&& assertControl ("feature-c.xml","test/bundle-module-c/1.0-SNAPSHOT/bundle-module-c-1.0-SNAPSHOT-features.xml")
;
